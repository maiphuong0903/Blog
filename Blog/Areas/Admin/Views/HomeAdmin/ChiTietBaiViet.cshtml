@model Blog.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ChiTietBaiViet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-xl font-semibold my-7">Chi Tiết Bài Viết</h1>
<hr />
<div>
    <dl class="px-5 py-4">
        <div class="flex gap-16 mb-4">
            <dt class="text-md font-medium">
                @Html.DisplayNameFor(model => model.PostName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PostName)
            </dd>
        </div>
        <div class="flex gap-10 mb-4">
            <dt class="text-md font-medium">
            @Html.DisplayNameFor(model => model.ShortContent)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ShortContent)
            </dd>
        </div>
        
        <div class="flex gap-20 mb-4">
            <dt class="text-md font-medium">
                @Html.DisplayNameFor(model => model.Picture)
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/img/" + Model.Picture)" alt="Ảnh" class="w-[200px] h-[150px] px-3 py-2 object-cover" />
            </dd>
        </div>
        <div class="flex gap-12 mb-4">
            <dt class="text-md font-medium">
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreateDate)
            </dd>
        </div>
        <div class="flex gap-20 mb-4">
            <dt class="text-md font-medium">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author)
            </dd>
        </div>
       <div class="flex gap-14 mb-4">
            <dt class="text-md font-medium">
                Categories
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cat.CatName)
            </dd>
        </div>
        <div class="flex gap-16 mb-4">
            <dt class="text-md font-medium">
                @Html.DisplayNameFor(model => model.Contents)
            </dt>
            <dd>
                @Html.Raw(Model.Contents)
            </dd>
        </div>
    </dl>
</div>
<div class="flex gap-6 mb-5 ml-[150px]">
    <a asp-action="SuaBaiViet" asp-route-postsID="@Model?.PostId" class="shadow bg-green-500 hover:bg-green-700 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">Edit</a> 
    <a asp-action="ListPosts" class="shadow bg-gray-500 hover:bg-gray-700 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">Back to List</a>
</div>
